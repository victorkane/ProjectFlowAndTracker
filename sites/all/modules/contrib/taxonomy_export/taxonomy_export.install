      ),
      'terms' => array(
        'type'        => 'blob',
        'description' => 'A serialized array of exported terms for the vocabulary object.',
        'serialize'   => TRUE,
        'serialized default' => 'a:0:{}',
      ),
    ),
    'primary key' => array('id'),
    'unique keys' => array('machine_name' => array('machine_name')),
