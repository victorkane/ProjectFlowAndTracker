    'fields' => array(
      'id' => array(
        'description' => t('Taxonomy export ID'),
        'type'        => 'serial',
        'unsigned'    => TRUE,
        'not null'    => TRUE,
        'no export'   => TRUE,
      ),
      'machine_name' => array(
        'description' => t('Vocabulary: machine name'),
        'type'        => 'varchar',
        'length'      => '32',
      ),
      'vocabulary' => array(
        'type'        => 'blob',
        'description' => 'A serialized array of the vocabulary object.',
        'serialize'   => TRUE,
